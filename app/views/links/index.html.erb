<%= link_to "Submit a new link", new_link_path %>

<ul id="links">
<% @links.each do |link| %>
  <%= tag.li id: "link_#{link.id}" do %>
    <%= link_to "Upvote", [link, :upvote], method: :post %>
    <div data-role="score"><%= link.score %></div>
    <%= link_to "Downvote", [link, :downvote], method: :post %>

    <%= link_to link.title, link.url %>
  <% end %>
<% end %>
</ul>
